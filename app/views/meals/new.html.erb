<div class="container">
  <%= form_for @meal, url: catering_meals_path, method: 'post' do |f| %>
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "meal_name" %>
    <%= f.select :ingredients, options_for_select(Ingredient.all.collect { |i| [i.name, i.id] }), {}, {:multiple => true, :class => "chzn-select", :style => "width:450px;" } %>
    <%= f.submit %>

  <% end %>
</div>